<!-- Message页面 -->
<template>
  <view class="message-page">
    <MessageBox
       :show.sync="showMessageBox"
       :title.sync="messageBoxTitle"
       :content.sync="messageBoxContent"
       :image.sync="messageImage"
       :inputShow.sync="inputShow"
       :cancelCallback.sync="cancelCallback"
       :successCallback.sync="successCallback"
       :animated="animated"
    ></MessageBox>
    <DefaultButton1 class="btn" @tap.user="handleDefault" shape="plain">有标题</DefaultButton1>
    <DefaultButton2 class="btn" @tap.user="handleMain" shape="plain">没有标题提示</DefaultButton2>
    <DefaultButton3 class="btn" @tap.user="handleNoContent" shape="plain">没有内容</DefaultButton3>
    <DefaultButton4 class="btn" @tap.user="handleInput" shape="plain">有输入框</DefaultButton4>
    <DefaultButton5 class="btn" @tap.user="handleImage" shape="plain">有图片</DefaultButton5>
    <DefaultButton6 class="btn" @tap.user="handleNoCancel" shape="plain">没取消按钮</DefaultButton6>
  </view>
</template>
<script>
import wepy from 'wepy'
import MessageBox from '../components/MessageBox'
import Button from '../components/Button'

export default class MessageBoxPage extends wepy.page {
  config = {
    navigationBarTitleText: '信息弹框'
  }
  components = {
    MessageBox,
    DefaultButton1: Button,
    DefaultButton2: Button,
    DefaultButton3: Button,
    DefaultButton4: Button,
    DefaultButton5: Button,
    DefaultButton6: Button
  }
  props = {}
  data = {
    showMessageBox: false,
    messageBoxTitle: '测试信息弹框标题',
    messageBoxContent: '测试信息弹框内容',
    cancelShow: true,
    // cancelBtn: {
    //   show: true,
    //   color: '',
    //   text: '关闭',
    //   callback: false
    // },
    // successBtn: {
    //   text: '可以哦',
    //   callback: false
    // },
    messageImage: '',
    cancel: false,
    success: false,
    animated: 'flipInX',
    cancelCallback: false,
    successCallback: false,
    inputShow: false
  }
  onLoad() {}
  methods = {
    handleDefault() {
      this.messageBoxTitle = '弹框测试'
      this.messageBoxContent = '测试信息弹框内容'
      this.messageImage = ''
      this.inputShow = false
      this.cancelShow = true
      this.showMessageBox = true
    },
    handleMain() {
      this.messageBoxTitle = ''
      this.messageBoxContent = '测试信息弹框内容'
      this.inputShow = false
      this.showMessageBox = true
    },
    handleNoContent() {
      this.messageBoxTitle = '弹框测试'
      this.cancelShow = true
      this.messageBoxContent = ''
      this.messageImage = ''
      this.inputShow = false
      this.showMessageBox = true
    },
    handleInput() {
      this.messageImage = ''
      this.cancelShow = true
      this.messageBoxTitle = '带输入框信息弹框'
      this.messageBoxContent = '测试信息弹框内容'
      this.inputShow = true
      this.showMessageBox = true
    },
    handleImage() {
      this.messageBoxTitle = '弹框测试'
      this.cancelShow = true
      this.messageBoxContent = '测试信息弹框内容'
      this.inputShow = false
      this.cancelShow = true
      this.messageImage =
        'http://onx3fp6gi.bkt.clouddn.com/background-2076334_960_720.jpg'
      this.showMessageBox = true
    },
    handleNoCancel() {
      this.messageBoxTitle = '弹框测试'
      this.cancelShow = false
      this.showMessageBox = true
    }
  }
  watch = {
    showMessageBox() {},
    cancelCallback() {
      console.log('cancelBtn', this.cancelCallback)
    },
    successCallback() {
      console.log('successBtn', this.successCallback)
    }
  }
}
</script>

<style lang="scss">
.message-page {
  padding-top: 200rpx;
}
.btn {
  margin-bottom: 20rpx;
}
</style>
